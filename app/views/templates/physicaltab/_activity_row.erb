<template id="activity-row">
    <td>
        <input class='pull-left' name="startHour" min='7' max='23' value='7' type="number" />
        <input class='pull-left' name="startMinute" min='00' max='55' value='00' step='5' type="number" />
    </td>
    <td colspan="2">
        <input class="form-control" name="description" />
    </td>
    <td>
        <input class="form-control" name="activityPeriod" />
    </td>
    <td>
        <select class="form-control" name="activityLevel">
            <option value="basic">Базовий рівень</option>
            <option value="sitting">Сидячий рівень</option>
            <option value="small">Малий рівень</option>
            <option value="middle">Середній рівень</option>
            <option value="high">Високий рівень</option>
        </select>
    </td>
    <td>
        <span class="glyphicon glyphicon-remove"></span>
    </td>
</template>