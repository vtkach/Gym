            <option data-activity-level="sml">Гігієнічні процедури</option>
            <option data-activity-level="bl">Сон</option>
        </select>
    </td>
    <td>
        <input class='pull-left' name="activityHour" min='0' max='24' type="number" />
        <input class='pull-left' name="activityMinute" min='00' max='55' step='5' type="number" />
    </td>
